#set($currentPage="OPERATOR_MANAGEMENT")
#parse("/velocity/service/admin/navigation.vm")

<link rel="stylesheet"
	href="/static/css/business/service/admin/operatorManagement.css"></link>

<div class="operatorManagement" ng-controller="operatorManagementaController">
	<table>
		<thead>
			<tr>
				<th>#label("USERNAME")</th>
				<th>#label("STATUS")</th>
				<th>#label("STAFF_NO")</th>
				<th>#label("NAME")</th>
			</tr>
		</thead>
		<tbody>
			<tr ng-repeat="operator in operators">
				<td><a href="/service/operator/audit/receiver/{{receiver.id}}">{{receiver.id}}</a></td>
				<td>{{receiver.yijinCode}}</td>
				<td>{{receiver.name}}</td>
				<td>{{receiver.identityCard}}</td>
			</tr>
		</tbody>
	</table>
	<pagination total-items="paging.itemCount" ng-model="paging.pageIndex"
		max-size="10" items-per-page="paging.pageSize" class="pagination-sm"
		boundary-links="true" ng-change="pageChanged()"
		first-text='#label("FIRST_PAGE")' last-text='#label("LAST_PAGE")'
		previous-text='#label("PREVIOUS_PAGE")'
		next-text='#label("NEXT_PAGE")'></pagination>
</div>

<script src="/static/js/business/service/admin/operatorManagement.js"></script>