#parse("/velocity/user/navigation.vm")

<link rel="stylesheet" href="/static/css/business/user/appraise.css"></link>

<script type="text/javascript">
	layoutApp.value("orderId", ${orderId});
</script>

#macro(rateControl $name $rate)
<span class="rate ng-hide" ng-mouseenter="updateTemp$name($rate)" ng-mouseleave="recover$name()" ng-click="update$name()"
	ng-show="temp$name">{{temp$name>=$rate?'★':'☆'}}</span>
#end #macro(rateBar $name) #rateControl($name, 1) #rateControl($name, 2) #rateControl($name, 3) #rateControl($name, 4) #rateControl($name,
5) #end

<div class="appraise">
	<div class="left">
		<div>
			<img />
		</div>
		<div style="text-align: center;">
			<span>#label("ORDER_ID")</span> <span>{{order.id}}</span>
		</div>
		<div style="text-align: center;">
			<span>#label("SERVICE_TIME")</span> <span>{{order.serviceDate|date:'yyyy/MM/dd'}} {{order.serviceHour}}:00</span>
		</div>
		<div style="text-align: center;">
			<span>#label("ADDRESS")</span> <span>{{order.address}}</span>
		</div>
	</div>
	<div class="right">
		<div>#info("INPUT_YOUR_APPRAISE")</div>
		<div>
			<textarea ng-model="order.appraise.comment"></textarea>
		</div>
		<div>
			<span class="key">#label("SERVICE_ATTITUDE_RATE")</span> #rateBar("Attitude")
		</div>
		<div>
			<span class="key">#label("SERVICE_QUALITY_RATE")</span> #rateBar("Quality")
		</div>
		<div>
			<span class="key">#label("SERVICE_ON_TIME_RATE")</span> #rateBar("OnTime")
		</div>
		<div>
			<span class="key">#label("SERVICE_STAFF_RATE")</span> #rateBar("Staff")
		</div>
		<div style="margin-top: 20px;">
			<button ng-click="apply()">#button("APPLY")</button>
			<button ng-click="cancel()">#button("CANCEL")</button>
		</div>
	</div>
</div>

<script src="/static/js/business/user/appraise.js"></script>